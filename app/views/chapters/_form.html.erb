<%= form_for [@course,@chapter],:html =>{:id => "chapterForm"},:remote => true do |f| %>
  <div class="form_row">
    <label class="required label">名称</label>
    <%= f.text_field :name, :class => "required" %>
  </div>
  <div class="form_row">
    <label class="label">图片</label>
    <div class="fileBox">
      <input type="text" name="temp_input" class="fileText_1" />
      <input type="button" class="fileBtn_1 green_btn" value="浏览..." />
      <%= f.file_field :img, :class => "file_1", :onchange => "handleUpload(this)" %>
    </div>
  </div>
  <div class="form_row">
    <label class="label">&nbsp;</label>
    <%= button_tag "提交",:type => "submit", class: "green_btn", :onclick => "return checkFilesize('chapter_img');" %>
    </div>
  <% end %>
  <script>
    $(document).ready(function(){
      $('label.required').append('&nbsp;<strong>*</strong>&nbsp;');

      $("#chapterForm").validate();  //课程表单验证
    })
  </script>