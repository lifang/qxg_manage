<%= form_for @course do |f| %>
  <div>
    <label>课程名：</label>
    <%= f.text_field :name %>
  </div>
  <div>
    <label>课程类别：</label>
    <%= f.text_field :types %>
  </div>
  <div>
    <label>出版社：</label>
    <%= f.text_field :press %>
  </div>
  <div>
    <label>课程描述：</label>
    <%= f.text_area :description %>
  </div>
  <div>
    <label>课程图片：</label>
    <%= f.file_field :image %>
  </div>
  关卡
  <div>
    <label>关卡总分：</label>
    <%= f.text_field :max_score %>
  </div>
  <div>    <label>关卡血量：</label>
    <%= f.text_field :blood %>
  </div>
  <div>
    <label>规定时间：</label>
    <%= f.text_field :round_time %>
  </div>
  <div>
    <label>时间正确率比例：</label>
    <%= f.text_field :time_ratio %>
  </div>
  <%= submit_tag "提交"  %>
 <% end %>