<%= link_to "添加关卡", new_course_chapter_round_path(@course, @chapter), :remote => true %>
<ul>
  <% @rounds.each do |round| %>
    <li>
      关卡名称：<%= round.name %>
      关卡总分： <%= round.max_score%>
      关卡血量： <%= round.blood%>
      规定时间： <%= round.round_time%>
      时间比例： <%= round.time_ratio%>
      <%= link_to "编辑", edit_course_chapter_round_path(@course, @chapter, round), :remote => true %>
      <%= verify_button(round) %>
      <%= link_to "删除", course_chapter_round_path(@course, @chapter, round), :method => :delete, :confirm => "删除关卡将删除关卡所有相关记录，确认删除吗？" %>
      <%= link_to "进入关卡", round_questions_path(round)  %>
    </li>
  <% end %>
</ul>

<div style="display: none" id="round_container">
</div>