<div class="wrap">
  <%= render "/shared/head" %>
  <div class="main">
    <h1><%= link_to @course.name, course_chapters_path(@course.id) %>><%= link_to @chapter.name, course_chapter_rounds_path(@course.id, @chapter.id) %></h1>

    <div class="m_con">
      <div id="upload_bar" class="passUp">
        <%= render 'uploadzip' %>
      </div>
      <div id="error_bar" style="width:100%; height:auto;">
        <%= render :partial => 'error_infos'%>
      </div>

      <div id="rounds_list">
        <%= render :partial => 'rounds_list' %>
      </div>
    </div>
    <div class="clear"></div>
     <%= will_paginate @rounds, :previous_label => "上一页",:next_label => "下一页" %>
  </div>
</div>

<div class="second_bg"></div>
<div class="second_box">
  <div style="display: none" class="second_content">
    <span class="close">关闭</span>
    <div class="second_view" id="round_container">
    </div>
  </div>
</div>
