<%= render "/shared/course_head" %>

<%= link_to "添加标签", new_course_cardbag_tag_path(@course), :remote => true %>
<ul>
  search
  <% @tags.each do |tag| %>
    <li>
      标签名称：<%= tag.name %>
      <%= link_to "编辑", edit_course_cardbag_tag_path(@course, tag), :remote => true %>
      <%= link_to "删除", course_cardbag_tag_path(@course, tag), :method => :delete, :confirm => "确定删除吗？" %>
    </li>
  <% end %>
</ul>
<div style="display: none" id="tag_container">
</div>