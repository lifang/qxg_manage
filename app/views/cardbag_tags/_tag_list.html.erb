        var url = this.href + "&tag_name="+$("#search_tag").val();
        $.ajax({
          async:true,
          url:url,
          dataType:"script",
          type:"POST",
          success:function(){
            // alert(1);
          },error:function(){
            // alert("error");
          }
        });
        return false;
      });
     
    });
<% end %>
</script>